<resources>

    <!-- Global Theme -->
    <style name="ApplicationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <!-- Translucent -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Button -->
    <style name="ApplicationTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- ProgressDialog color -->
    <style name="ApplicationTheme.ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="ApplicationTheme.NotTranslucent" parent="ApplicationTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ApplicationTheme.NavigationNotTranslucent" parent="ApplicationTheme">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ApplicationTheme.FloatingEditText" parent="ApplicationTheme">
        <item name="android:colorControlNormal">@color/colorGrayLevelLight</item>          <!-- Line Bottom Deactivated -->
        <item name="android:colorControlActivated">@color/colorGrayLevel</item>       <!-- Line Bottom Actived -->
        <item name="android:textColorHighlight">@color/colorGrayLevelLight</item>     <!-- Text Selected to Copy -->
        <item name="android:textColorHint">@color/colorGrayLevel</item>               <!-- Color Hint Not Actived -->
        <item name="android:textColorPrimary">@color/colorBlackTon</item>            <!-- Text Inserted -->
    </style>

    <style name="ApplicationTheme.FloatingEditText.Hint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorGrayLevelLight</item>
        <item name="android:colorAccent">@color/colorGrayLevelLight</item>
        <item name="android:colorControlNormal">@color/colorGrayLevelLight</item>
        <item name="android:colorControlActivated">@color/colorGrayLevelLight</item>
    </style>

    <!-- Toolbar -->
    <style name="WhiteToolbarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

</resources>
